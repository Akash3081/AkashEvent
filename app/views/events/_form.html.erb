<%= form_with model: @event do |form| %>
  <div class="form-group m-1 p-1 col">
    <%= form.label :name, class: "form-label" %><br>
    <%= form.text_field :name, class: "form-control"%>
  </div>

  <div class="form-group m-1 p-1 col">
    <%= form.label :venue, class: "form-label" %><br>
    <%= form.select( :venue, options_for_select(['convention center', 'confrence hall', 'hotel', 'restaurants', 'resort', 'Breweries and wineries', 'Bars and nightclubs', 'Golf courses', 'Social clubs and lounges', 'Community centers', 'Museums, aquariums, and zoos', 'Art galleries', 'Historical and cultural estates', 'Theaters', ' Colleges and universities', 'Retreat centers', 'Cruise ships', 'Stadiums', 'other']),{} , class: "form-select")%>
  </div>

  <div class="form-group m-1 p-1 col">
    <%= form.label :event_type, class: "form-label" %><br>
    <%= form.select( :event_type, options_for_select(['Corporate off-sites & executive meetings', 'seminars', 'confrences', 'trade shows', 'Company parties', 'product launch', 'birthday', 'marriage', 'get together', 'reception', 'other']),{} , class: "form-select")%>
  </div>

  <div class="form-group m-1 p-1 col">
    <%= form.label :start_date, class: "form-label" %><br>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group m-1 p-1 col">
    <%= form.label :end_time, class: "form-label"  %><br>
    <%= form.date_field :end_time, class: "form-control"  %>
  </div>

  <div class="form-group m-1 p-1 col">
    <%= form.label :total_duration, class: "form-label"  %><br>
    <%= form.time_field :total_duration, class: "form-control" %>
  </div>

  <div class="form-group m-1 p-1 col">
    <%= form.label :description, class: "form-label" %><br>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group m-1 p-1 col">
    <%= form.label :is_paid %><br>
    <div class="input-group mb-3">
  <div class="input-group-text">
    <input class="form-check-input mt-0" type="checkbox" value="" aria-label="Checkbox for following text input">
  </div>
  <input type="text" class="form-control" aria-label="Text input with checkbox">
</div>
  </div>


  <div class="form-group m-1 p-1 col">
    <%#= form.submit %>
    <button type="submit" class="btn btn-secondary btn-lg">Submit</button>
    <div class="btn btn-secondary btn-lg"><%= link_to "Back", :back %></div>
  </div>
<% end %>
