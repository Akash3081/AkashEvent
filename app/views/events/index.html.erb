<h1>Events</h1>
<div class="container">
  <div class="row">
  <% @events.each do |e| %>
    <div class="card mb-3 col-5 m-4" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src=<%= asset_path("im.jpg") %> class="img-fluid rounded-start" alt="Events">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= link_to e.name, e %></h5>
            <p class="card-text"><%= e.description%>.</p>
            <p class="card-text"><small class="text-muted">Last updated at <%= e.updated_at %></small></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
<% if current_user.present? %>
<%= link_to "Create Event", new_event_path %>
<% end %>

